@page
@model _220529PruebaTecnica.Pages.Reservas.CrearModel
@{
    ViewData["Title"] = "Reservas";
}

<br>
<h2>Crear Reservas</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
      <strong>@Model.errorMessage</strong>
      <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Cliente</label>
        <div class="col-sm-6">
          <input type="text" class="form-control" name="cliente" value="@Model.reservaInfo.cliente">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Fecha</label>
        <div class="col-sm-6">
          <input type="text" class="form-control" name="fecha" value="@Model.reservaInfo.fecha">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Cantidad de Personas</label>
        <div class="col-sm-6">
          <input type="text" class="form-control" name="cantidad" value="@Model.reservaInfo.cantidad">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Motivo</label>
        <div class="col-sm-6">
          <input type="text" class="form-control" name="motivo" value="@Model.reservaInfo.motivo">
        </div>
    </div>
        <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Observaciones</label>
        <div class="col-sm-6">
          <input type="text" class="form-control" name="observaciones" value="@Model.reservaInfo.observaciones">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Estado</label>
        <div class="col-sm-6">
          <input type="text" class="form-control" name="estado" value="@Model.reservaInfo.estado">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.successMessage</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Crear</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Reservas/Index" role="button">Cancelar</a>
        </div>
    </div>
</form>